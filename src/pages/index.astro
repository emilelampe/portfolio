---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Emile Lampe | Filmmaker & Photographer">
  <section class="min-h-[85vh] flex items-center">
    <div class="container py-20">
      <div class="grid md:grid-cols-12 gap-12 md:gap-8 items-center">
        <div class="md:col-span-6 space-y-8">
          <div>
            <p class="label mb-4">Filmmaker & Photographer</p>
            <h1 class="text-4xl md:text-5xl lg:text-6xl leading-[1.1]">
              Capturing stories<br />through light<br />
              <span class="text-muted italic">& motion</span>
            </h1>
          </div>
          <div class="accent-line"></div>
          <p class="text-lg text-muted leading-relaxed max-w-md">
            I create visual stories that capture emotion and authenticity.
            With a focus on documentary-style filmmaking and candid photography,
            I bring moments to life through thoughtful composition and natural light.
          </p>
          <div class="flex gap-6 pt-2">
            <a href="/films" class="group inline-flex items-center gap-2 text-sm text-muted hover:text-accent transition-colors">
              <span>View Films</span>
              <span class="group-hover:translate-x-1 transition-transform">&rarr;</span>
            </a>
            <a href="/photos" class="group inline-flex items-center gap-2 text-sm text-muted hover:text-accent transition-colors">
              <span>View Photos</span>
              <span class="group-hover:translate-x-1 transition-transform">&rarr;</span>
            </a>
          </div>
        </div>
        <div class="md:col-span-5 md:col-start-8">
          <div class="aspect-[3/4] bg-white/5 rounded overflow-hidden">
            <img
              src="/images/about/profile.png"
              alt="Emile Lampe"
              class="w-full h-full object-cover"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-24 border-t border-white/5">
    <div class="container">
      <div class="max-w-2xl">
        <p class="label mb-4">Get in Touch</p>
        <h2 class="text-3xl md:text-4xl mb-6">Let's work together</h2>
        <div class="accent-line mb-8"></div>
        <p class="text-muted leading-relaxed mb-8">
          Available for freelance projects, collaborations, and commissions.
          Feel free to reach out.
        </p>
        <a
          href="mailto:hello@emilelampe.com"
          class="inline-flex items-center gap-3 text-xl md:text-2xl hover:text-accent transition-colors group"
        >
          <span>hello@emilelampe.com</span>
          <span class="group-hover:translate-x-1 transition-transform">&rarr;</span>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
