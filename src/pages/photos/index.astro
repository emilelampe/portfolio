---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AlbumCard from '../../components/AlbumCard.astro';
import { getCollection } from 'astro:content';

const albums = await getCollection('albums');
const sortedAlbums = albums.sort((a, b) => a.data.order - b.data.order);
---

<BaseLayout title="Photos | Portfolio">
  <section class="py-12 md:py-20">
    <div class="container">
      <h1 class="text-3xl md:text-4xl font-medium mb-4">Photos</h1>
      <p class="text-muted max-w-2xl">
        Browse through curated photo albums from various projects and travels.
      </p>
    </div>
  </section>

  <section class="pb-20">
    <div class="container">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {sortedAlbums.map((album) => (
          <AlbumCard
            slug={album.id}
            title={album.data.title}
            cover={album.data.cover}
          />
        ))}
      </div>

      {sortedAlbums.length === 0 && (
        <div class="py-20 text-center text-muted">
          <p>No albums yet. Add albums to src/content/albums/</p>
        </div>
      )}
    </div>
  </section>
</BaseLayout>
