---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';

const albums = await getCollection('albums');
const sortedAlbums = albums.sort((a, b) => a.data.order - b.data.order);
---

<BaseLayout title="Photos | Emile Lampe">
  <section class="min-h-screen py-20 md:py-32">
    <div class="container">
      <div class="mb-16 md:mb-24">
        <p class="label mb-4">Photo Albums</p>
        <h1 class="text-4xl md:text-5xl mb-6">Photos</h1>
        <div class="accent-line"></div>
      </div>

      <div class="space-y-20 md:space-y-32">
        {sortedAlbums.map((album, index) => (
          <a
            href={`/photos/${album.id}/1`}
            class="group grid md:grid-cols-12 gap-8 md:gap-12 items-center"
          >
            <div class="md:col-span-6 aspect-[4/3] rounded overflow-hidden">
              <Image
                src={album.data.cover}
                alt={album.data.title}
                class="w-full h-full object-cover group-hover:scale-[1.02] transition-transform duration-700"
                widths={[600, 900, 1200]}
                sizes="(max-width: 768px) 100vw, 50vw"
                quality={85}
              />
            </div>
            <div class="md:col-span-5 md:col-start-8">
              <span class="label block mb-3">
                {String(index + 1).padStart(2, '0')}
              </span>
              <h2 class="text-3xl md:text-4xl mb-4 group-hover:text-accent transition-colors">
                {album.data.title}
              </h2>
              <div class="accent-line mb-4"></div>
              <p class="text-muted">
                {album.data.photos.length} photos
              </p>
            </div>
          </a>
        ))}
      </div>

      {sortedAlbums.length === 0 && (
        <p class="text-muted py-8">No albums yet.</p>
      )}
    </div>
  </section>
</BaseLayout>
