---
import BaseLayout from '../layouts/BaseLayout.astro';
import StillsGrid from '../components/StillsGrid.astro';
import { getCollection } from 'astro:content';

const stillsCollection = await getCollection('stills');

const allStills = stillsCollection.flatMap((entry) =>
  entry.data.images.map((src) => ({
    src,
    filmSlug: entry.data.filmSlug,
  }))
);
---

<BaseLayout title="Stills | Emile Lampe">
  <section class="py-12 md:py-16 pb-24">
    <div class="container">
      <div class="max-w-2xl mb-12">
        <p class="label mb-4">Film Stills</p>
        <h1 class="text-4xl md:text-5xl mb-6">Stills</h1>
        <div class="accent-line"></div>
      </div>

      <StillsGrid stills={allStills} />

      {allStills.length === 0 && (
        <p class="text-muted py-8">No stills yet.</p>
      )}
    </div>
  </section>
</BaseLayout>
