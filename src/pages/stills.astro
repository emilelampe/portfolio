---
import BaseLayout from '../layouts/BaseLayout.astro';
import StillsGrid from '../components/StillsGrid.astro';
import { getCollection } from 'astro:content';

const stillsCollection = await getCollection('stills');

// Flatten all stills with their film references
const allStills = stillsCollection.flatMap((entry) =>
  entry.data.images.map((src) => ({
    src,
    filmSlug: entry.data.filmSlug,
  }))
);
---

<BaseLayout title="Stills | Portfolio">
  <section class="py-12 md:py-20">
    <div class="container">
      <h1 class="text-3xl md:text-4xl font-medium mb-4">Film Stills</h1>
      <p class="text-muted max-w-2xl">
        Selected frames from various film projects. Click any still to view the full film.
      </p>
    </div>
  </section>

  <section class="pb-20">
    <div class="container">
      <StillsGrid stills={allStills} />

      {allStills.length === 0 && (
        <div class="py-20 text-center text-muted">
          <p>No stills yet. Add stills to src/content/stills/</p>
        </div>
      )}
    </div>
  </section>
</BaseLayout>
