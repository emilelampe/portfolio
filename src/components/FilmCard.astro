---
interface Props {
  id: string;
  title: string;
  description: string;
  youtubeId: string;
  thumbnail: string;
  reverse?: boolean;
}

const { id, title, description, youtubeId, thumbnail, reverse = false } = Astro.props;
---

<article id={id} class="py-16 md:py-24">
  <div class:list={[
    "container grid md:grid-cols-2 gap-8 md:gap-12 items-center",
    reverse && "md:[direction:rtl]"
  ]}>
    <div class="aspect-video bg-white/5 rounded-lg overflow-hidden md:[direction:ltr]">
      <iframe
        width="100%"
        height="100%"
        src={`https://www.youtube.com/embed/${youtubeId}`}
        title={title}
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen
        loading="lazy"
        class="w-full h-full"
      ></iframe>
    </div>
    <div class="space-y-4 md:[direction:ltr]">
      <h2 class="text-2xl md:text-3xl font-medium">{title}</h2>
      <p class="text-muted leading-relaxed">{description}</p>
    </div>
  </div>
</article>
