---
interface Props {
  slug: string;
  title: string;
  cover: string;
}

const { slug, title, cover } = Astro.props;
---

<a href={`/photos/${slug}`} class="group block">
  <div class="aspect-[4/3] bg-white/5 rounded-lg overflow-hidden mb-4">
    <img
      src={cover}
      alt={title}
      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
      loading="lazy"
    />
  </div>
  <h3 class="text-lg font-medium group-hover:text-white transition-colors">{title}</h3>
</a>
